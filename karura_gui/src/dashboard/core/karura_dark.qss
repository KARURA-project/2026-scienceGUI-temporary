/* ==============================
   Karura Dark Red Theme (PySide6)
   - Charcoal + warm darks (no navy)
   - Subtle red accents
   ============================== */

/* ----- Base ----- */
QWidget {
    background-color: #191314;   /* warm charcoal */
    color: #F2F2F2;
    font-family: "Inter", "Segoe UI", "Noto Sans", "Ubuntu", sans-serif;
    font-size: 12px;
}

QMainWindow {
    background-color: #191314;
}

/* ----- Cards / Panels ----- */
QFrame#leftgroup,
QFrame#centralgroup,
QFrame#hudDock,
QFrame#bottomBar,
QFrame#statusBox,
QGroupBox {
    background-color: #211819;
    border: 1px solid #3A2426;
    border-radius: 12px;
}


QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    color: #F2F2F2;
    font-weight: 700;
}

/* ----- Labels ----- */
QLabel { color: #F2F2F2; }

QLabel#muted { color: #C8BEBF; }

QLabel#sectionTitle {
    font-size: 16px;
    font-weight: 800;
    letter-spacing: 0.6px;
}

/* ----- Buttons ----- */
QPushButton {
    background-color: #55000a;
    border: 1px solid #3A2426;
    border-radius: 10px;
    padding: 8px 12px;
    font-weight: 650;
}

QPushButton:hover {
    background-color: #2A1D1F;
    border: 1px solid #5A3336;
}

QPushButton:pressed {
    background-color: #1C1415;
}

QPushButton:disabled {
    background-color: #1D1516;
    border: 1px solid #2E1D1E;
    color: #8F8586;
}

/* Accent buttons */
QPushButton#primaryButton {
    background-color: #3A1C22;
    border: 1px solid #C34B4B;
}
QPushButton#primaryButton:hover {
    background-color: #472028;
    border: 1px solid #E05E5E;
}

QPushButton#dangerButton {
    background-color: #2B1013;
    border: 1px solid #C34B4B;
}
QPushButton#dangerButton:hover {
    background-color: #361417;
    border: 1px solid #E05E5E;
}

/* ----- Inputs ----- */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #1E1617;
    border: 1px solid #3A2426;
    border-radius: 10px;
    padding: 8px 10px;
    selection-background-color: #C34B4B;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #E05E5E;
}

/* ----- Combo / Spin ----- */
QComboBox, QSpinBox, QDoubleSpinBox {
    background-color: #1E1617;
    border: 1px solid #3A2426;
    border-radius: 10px;
    padding: 6px 10px;
}
QComboBox:focus, QSpinBox:focus, QDoubleSpinBox:focus {
    border: 1px solid #E05E5E;
}

QComboBox QAbstractItemView {
    background-color: #211819;
    border: 1px solid #3A2426;
    selection-background-color: #3A1C22;
    selection-color: #F2F2F2;
    outline: 0;
}

/* ----- Tabs ----- */
QTabWidget::pane {
    border: 1px solid #3A2426;
    border-radius: 12px;
    background-color: #211819;
}

QTabBar::tab {
    background-color: #1D1516;
    border: 1px solid #3A2426;
    padding: 8px 12px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    margin-right: 6px;
    color: #C8BEBF;
}

QTabBar::tab:selected {
    background-color: #211819;
    border: 1px solid #C34B4B;
    color: #F2F2F2;
}

/* ----- Progress ----- */
QProgressBar {
    border: 1px solid #3A2426;
    border-radius: 10px;
    text-align: center;
    background-color: #1E1617;
    color: #F2F2F2;
}
QProgressBar::chunk {
    background-color: #C34B4B;
    border-radius: 9px;
}

/* ----- Sliders ----- */
QSlider::groove:horizontal {
    background: #3A2426;
    height: 6px;
    border-radius: 3px;
}
QSlider::handle:horizontal {
    background: #C34B4B;
    width: 14px;
    margin: -5px 0;
    border-radius: 7px;
}

/* ----- Scrollbars ----- */
QScrollBar:vertical {
    background: #191314;
    width: 10px;
    margin: 2px;
}
QScrollBar::handle:vertical {
    background: #3A2426;
    border-radius: 5px;
    min-height: 30px;
}
QScrollBar::handle:vertical:hover {
    background: #5A3336;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

/* ----- Tooltips ----- */
QToolTip {
    background-color: #211819;
    color: #F2F2F2;
    border: 1px solid #3A2426;
    border-radius: 8px;
    padding: 6px 8px;
}

/* ----- Status bar ----- */
QStatusBar {
    background-color: #191314;
    color: #C8BEBF;
}

/* ----- Camera surface convenience ----- */
QLabel#videoSurface,
QLabel#videoSurface_TL,
QLabel#videoSurface_TR,
QLabel#videoSurface_BL,
QLabel#videoSurface_BR {
    background: #0F0B0C;
    border: 1px solid #3A2426;
    border-radius: 12px;
}

/* Bottom bar floating strip */
QFrame#bottomBar {
    background-color: rgba(30, 20, 21, 235);
    border: 1px solid #3A2426;
    border-radius: 22px;
}

/* Mission timer pill (the "home button") */
QFrame#missionTimerPill {
    background-color: rgba(55, 20, 24, 220);
    border: 1px solid #A33A40;
    border-radius: 30px;  /* pill */
}

/* Timer text */
QLabel#missionTimerValue {
    color: #F4F4F4;
    letter-spacing: 0.6px;
}

/* Start/Stop (smaller, tighter, consistent) */
QPushButton#bottomStartButton,
QPushButton#bottomStopButton {
    background-color: rgba(22, 16, 16, 210);
    border: 1px solid #5A3336;
    border-radius: 14px;
    font-weight: 800;
    padding: 8px 14px;
    min-width: 80px;
}

QPushButton#bottomStartButton:hover,
QPushButton#bottomStopButton:hover {
    border: 1px solid #C84E55;
    background-color: rgba(30, 18, 18, 230);
}

QPushButton#bottomStartButton:pressed,
QPushButton#bottomStopButton:pressed {
    background-color: rgba(18, 14, 14, 255);
}

/* Status chips */
QFrame#statusBox {
    background-color: rgba(20, 16, 16, 200);
    border: 1px solid #3A2426;
    border-radius: 14px;
}

QLabel#statusLabel {
    color: #D8D0D0;
    font-weight: 800;
    letter-spacing: 0.5px;
}

/* LED dots */
QLabel#ledOk {
    background-color: #2ECC71;
    border-radius: 5px;
}

QLabel#ledBad {
    background-color: #E74C3C;
    border-radius: 5px;
}

QLabel#ledWarn {
    background-color: #F1C40F;
    border-radius: 5px;
}